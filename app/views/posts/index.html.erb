<%= link_to 'New Post', new_post_path %>
<br/>
<br/>


<div id="list">
      <% @posts.each do |post| %>
      <div class="note shadow">
          <div class="text">
                <h2><%= post.name %></h2>
                <p><%= post.body %></p>
                <div class="controls">
                  <%= link_to 'Show', post %>
                  <%= link_to 'Edit', edit_post_path(post) %>
                  <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
                </div>
          </div>
      </div>
    <% end %>
</div>


